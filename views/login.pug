extends layout 

block content 
	h2= title 

	form(method='POST')
		label(for='username') Username: 
		input#username(type='text' name='username' required value=username || '')

		label(for='password') Password: 
		input#password(type='password' name='password' required)

		button.submit(type='submit') Sign In 

	
	//- Form Errors
	if errors 
		ul 
			each err in errors 
				li.err= err.msg 

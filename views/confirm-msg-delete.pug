extends layout 

block content 
	h1= title 
	p Are you sure you want to delete this message?

	.msg(style='width: 50vw;') 
		h3= message.title
			if user && user.member
				span= message.dateData.format + ' ago'
		p= message.body 
		if user && user.member
			p.author ~#{message.author.name}
			form.delete-form(action=`/delete-msg/${message.id}` method='POST')
				button.delete(type='submit') Delete
